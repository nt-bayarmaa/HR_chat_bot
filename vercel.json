{
	"buildCommand": "bun run build:rpc && mkdir -p public && echo '<!DOCTYPE html><html><head><meta charset=\"utf-8\"><title>API</title></head><body><h1>API</h1></body></html>' > public/index.html",
	"outputDirectory": "public",
	"functions": {
		"api/**/*.ts": {
			"runtime": "bun@1.2.20"
		}
	},
	"rewrites": [
		{
			"source": "/api/(.*)",
			"destination": "/api/index"
		},
		{
			"source": "/(.*)",
			"destination": "/api/index"
		}
	]
}

