{
	"$schema": "https://turbo.build/schema.json",
	"globalDependencies": ["**/.env"],
	"ui": "tui",
	"tasks": {
		"build": {
			"dependsOn": ["^build"],
			"outputs": ["dist/**"]
		},
		"build:rpc": {
			"dependsOn": ["^build"],
			"outputs": ["dist/**"]
		},
		"dev": {
			"dependsOn": ["build:rpc"],
			"cache": false,
			"persistent": true
		},
		"dev:rpc": {
			"cache": false,
			"persistent": true
		},
		"typecheck": {
			"dependsOn": ["^typecheck"]
		}
	}
}

